# Environment Configuration Example
# Copy this file to .env.local or set these as OS environment variables
# For Expo, use REACT_APP_* prefix when building

# =====================================
# API Configuration
# =====================================

# Backend API base URL
# Development (mock server): http://localhost:3000/api
# Development (real backend): http://localhost:8000/api
# Android emulator (real backend): http://10.0.2.2:8000/api
# Production: https://api.production.com/api
REACT_APP_API_BASE_URL=http://localhost:3000/api

# Use mock API instead of real backend
# Useful for testing when backend is not available
REACT_APP_USE_MOCK=true

# Upload timeout in seconds
REACT_APP_UPLOAD_TIMEOUT=30

# =====================================
# Network Configuration
# =====================================

# Network status check interval (ms)
# Lower = more responsive, higher = less battery drain
# Default: 2000 (check every 2 seconds)
REACT_APP_NETWORK_POLL_INTERVAL=2000

# Only sync over WiFi (not cellular data)
# Default: false (sync over both WiFi and cellular)
REACT_APP_WIFI_ONLY=false

# =====================================
# Queue Configuration
# =====================================

# Number of assets to process at a time
# Default: 5 (process 5 assets in each batch)
REACT_APP_QUEUE_BATCH_SIZE=5

# Maximum concurrent uploads
# Default: 3 (max 3 uploads happening simultaneously)
REACT_APP_QUEUE_MAX_CONCURRENT=3

# Maximum retry attempts per asset
# Default: 5 (try up to 5 times before giving up)
REACT_APP_QUEUE_MAX_RETRIES=5

# Initial retry delay in seconds
# Default: 5 (first retry after 5 seconds)
REACT_APP_QUEUE_RETRY_DELAY=5

# =====================================
# Logging Configuration
# =====================================

# Enable verbose logging to console
# Useful for debugging, disable in production for performance
# Default: false
REACT_APP_LOG_VERBOSE=false

# =====================================
# Common Scenarios
# =====================================

# Scenario 1: Development with mock backend
# REACT_APP_USE_MOCK=true
# REACT_APP_LOG_VERBOSE=true

# Scenario 2: Development with real backend on localhost
# REACT_APP_API_BASE_URL=http://localhost:8000/api
# REACT_APP_USE_MOCK=false
# REACT_APP_LOG_VERBOSE=true

# Scenario 3: Android emulator connecting to host machine backend
# REACT_APP_API_BASE_URL=http://10.0.2.2:8000/api
# REACT_APP_USE_MOCK=false
# REACT_APP_LOG_VERBOSE=true

# Scenario 4: Production deployment
# REACT_APP_API_BASE_URL=https://api.production.com/api
# REACT_APP_USE_MOCK=false
# REACT_APP_LOG_VERBOSE=false
# REACT_APP_QUEUE_MAX_RETRIES=3
# REACT_APP_NETWORK_POLL_INTERVAL=5000
